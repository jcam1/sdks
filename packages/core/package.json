{
  "name": "@jpyc/sdk-core",
  "version": "1.5.0",
  "license": "MIT",
  "description": "Core SDK for JPYC protocol",
  "keywords": [
    "jpyc",
    "jpy",
    "stablecoin",
    "ethereum",
    "polygon",
    "evm"
  ],
  "repository": "https://github.com/jcam1/sdks.git",
  "homepage": "https://github.com/jcam1/sdks.git#readme",
  "bugs": {
    "url": "https://github.com/jcam1/sdks/issues/new?labels=bug,sdk-core&template=bug_report.md"
  },
  "engines": {
    "node": "^20.12.0",
    "yarn": "^1.22.22"
  },
  "type": "module",
  "main": "dist/src",
  "types": "dist/types/src",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "lint": "eslint --fix ./src",
    "lint:dry-run": "eslint ./src",
    "format": "prettier --write .",
    "format:dry-run": "prettier --check .",
    "docs": "yarn docs:md && yarn docs:html",
    "docs:md": "typedoc --plugin typedoc-plugin-markdown --out ../../docs/core/md",
    "docs:html": "typedoc --out ../../docs/core/html"
  },
  "dependencies": {
    "dotenv": "^16.4.6",
    "soltypes": "^2.0.0",
    "viem": "^2.21.53"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.2",
    "typedoc-plugin-markdown": "^4.3.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "transform": {
      "^.+.tsx?$": [
        "ts-jest",
        {}
      ]
    }
  }
}
